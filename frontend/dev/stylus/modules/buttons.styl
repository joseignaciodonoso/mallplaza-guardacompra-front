
.btn
	font-weight 500
	display inline-block
	padding 10px 25px
	font-size $global-size-sm
	transition .2s
	border-radius 5px
	background-color $cyan
	color white
	font-weight bold
	font-family $font2
	&:hover
		background-color $cyan2
	
	&.btn--transparent
		background-color: #e99090d6;
		color: #fff;
		margin-right: 20px;
		padding: 10px;
	
	&.btn--link
		color $color_primary
		background-color transparent
		font-weight 400
		text-transform uppercase
		font-weight bold

	&.btn--link-xs
		color $gray
		opacity .6
		background-color transparent
		font-weight 400
		text-transform uppercase
		font-weight bold
		font-size 10px
		line-height 12px
		padding 5px

	&.btn--plan
		width: 90%
		padding: 15px 50px
		font-size: 15px
		

