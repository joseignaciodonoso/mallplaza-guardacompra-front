article
	position relative
	overflow hidden
	transition box-shadow 0.3s ease 0s
	background-color white
	background: none;
	a:after
		content ""
		cover absolute
		z-index 2

	// Elements

	.article__bg
		cover absolute

	.article__title
		font-weight 500
		margin-bottom 5px

	.article__description
		margin-bottom 10px
		font-size $global-size-sm
		line-height $global-lh-md
		&:last-child
			margin-bottom 0

	.article__content
		p
			font-size $global-size-md
			opacity .7
	



	&.article__card
		box-shadow: 0px 4px 10px 0px #00000014;
		border-radius: 16px
		padding: 26px 16px
		min-height 153px
		margin-bottom: 20px
		.article__description
			text-align center
			line-height: 1.3
			margin-top: 10px
			font-size: 16px
		

		
