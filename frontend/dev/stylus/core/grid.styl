
// Bootstrap gid

// Col styles
make-grid-columns()

// Cols container tradicional de Bootstrap
.row
	make-row()

// Cols container modificado
// - Soporte para gutter bottom.
// - Clases para gutter x0 y gutter x2.
.cols
	make-row()
	&>div
		margin-bottom 0
		box-sizing border-box
	&:last-child
		margin-bottom 0

	&.cols--0
		make-row(0)
		&>div
			padding-left 0
			padding-right 0
			margin-bottom 0
		&:last-child
			margin-bottom 0

	&.cols--sm
		make-row($grid-gutter-width*0.5)
		&>div
			padding-left $grid-gutter-width*0.25
			padding-right $grid-gutter-width*0.25
			margin-bottom ($grid-gutter-width*0.5)


	@media (max-width $screen-md)

		&.cols--scroll
			overflow auto
			white-space nowrap
			margin 0 ($g-pad*-1) ($g-pad*-1)
			padding 0 $g-pad $g-pad
			&>div
				display inline-block
				vertical-align top
				width 300px
				white-space normal
				margin 0
				&:last-child
					margin-right $g-pad - 5

	@media (max-width $screen-md)

		&.cols--min
			make-row(0)
			margin-left -5px
			margin-right -5px
			&>div
				padding-left 5px
				padding-right 5px
				margin-bottom 10px
			&:last-child
				margin-bottom -10px


	@media (min-width $screen-lg-min)

		&.cols--md
			make-row($grid-gutter-width*2)
			&>div
				padding-left $grid-gutter-width
				padding-right $grid-gutter-width
				margin-bottom ($grid-gutter-width*2)
			&:last-child
				margin-bottom ($grid-gutter-width*-2)

	@media (min-width $screen-lg-min)
		&.cols-gutter-2
			make-row($grid-gutter-width*2)
			&>div
				padding-left $grid-gutter-width
				padding-right $grid-gutter-width
				margin-bottom ($grid-gutter-width*2)
			&:last-child
				margin-bottom ($grid-gutter-width*-2)


